// clang-format off
{
  "configurations": [
    {
      "name": "Metron",
      "preLaunchTask": "build_metron_bin",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/metron",
      "cwd": "${workspaceFolder}",
      //"args" : [      "-d", "-v", "-e", "-c", "examples/scratch.h", "-o", "examples/scratch.sv"],
      "args" : [
        "-p",
        "-d",
        "-v",
        "-e",
        "-c",
        //"examples/scratch.h",
        "tests/metron_good/noconvert.h",
        //"examples/uart/metron/uart_hello.h",
        //"examples/rvsimple/metron/config.h",
        "-o",
        "examples/scratch.sv"
      ],
      "setupCommands": [
        { // Display content in STL containers pretty
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
