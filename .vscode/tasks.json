{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build_metron_all",
      "command": "ninja",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn":["regen_ninja"],
      "presentation": {
        "echo": false,
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "build_metron_bin",
      "command": "ninja",
      "args": [
        //"bin/examples/pinwheel"
        "bin/metron"
      ],
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "dependsOn":["regen_ninja"],
      "presentation": {
        "echo": false,
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "regen_ninja",
      "command": "./build.py",
      "group": "build",
      "presentation": {
        "echo": false,
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
